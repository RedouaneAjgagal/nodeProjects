<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <% secrets.forEach(secret => { %>
      <p class="secret-text"><%=secret%></p>
    <% }) %>

    <hr>
    
    <% let mode = isAuthenticated ? "logout" : "login" %>

    <a class="btn btn-dark btn-lg" href="/secrets/submit" role="button">Submit a Secret</a> <a class="btn btn-light btn-lg" href=<%= mode %> role="button"><%= mode %></a>
  </div>
</div>

<%- include('partials/footer') %>
